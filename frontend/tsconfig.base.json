{
  "files": [],
  "references": [
    { "path": "packages/@papermerge/hooks" },
    { "path": "apps/hooks.dev" }
  ],
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "jsx": "react-jsx",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "allowImportingTsExtensions": true,
    "strict": true,
    "skipLibCheck": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "isolatedModules": true,
    "noEmit": true,
    "composite": true,
    "baseUrl": ".",
    "paths": {
      "@papermerge/hooks": ["packages/@papermerge/hooks/src"],
      "@/*": ["apps/ui/src/*"]
    }
  }
}
